<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/z2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/k2" />

        <ImageView
            android:id="@+id/z3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/k3" />

        <ImageView
            android:id="@+id/z1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:src="@drawable/k1" />

        <ImageView
            android:id="@+id/z4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/k4" />

        <ImageView
            android:id="@+id/z5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/k5" />

        <ImageView
            android:id="@+id/z6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/k6" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/cz1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/cz1" />

        <ImageView
            android:id="@+id/cz2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/cz2" />

        <ImageView
            android:id="@+id/cz3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:src="@drawable/cz3" />

        <ImageView
            android:id="@+id/cz4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/cz4" />

        <ImageView
            android:id="@+id/cz5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/cz5" />

        <ImageView
            android:id="@+id/cz6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/cz6" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/s1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/ship" />

        <ImageView
            android:id="@+id/s2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/ship" />

        <ImageView
            android:id="@+id/s3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:src="@drawable/ship" />

        <ImageView
            android:id="@+id/s4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/green" />

        <ImageView
            android:id="@+id/s5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/blue" />

        <ImageView
            android:id="@+id/s6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:visibility="invisible"
            android:src="@drawable/yellow" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/mRzut3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#c2c205"
            android:fontFamily="@font/permanent_marker"
            android:gravity="center_horizontal|center_vertical"
            android:text="3 KOSTKI"
            android:textColor="#fff"
            android:textSize="35sp" />
    </LinearLayout>

</LinearLayout>